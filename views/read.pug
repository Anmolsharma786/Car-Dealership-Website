extends Partials\header

block content
  body(class= "read")
    //Check for any articles being passed in from the server
    if (articles && articles.length)
        section
            each article in articles
                div(class= "product")
                    img(src='/images/'+article.image)
                    br
                    h1= "$"+article.price
                    p= "owner's Contact Number is: "+article.contact
                    p= "Car's Description: "+article.description
                    if(user)
                        a(href='/update/'+article.id) Update
                        form.deleteForm(id=article.id)
                            button(type='submit') Delete
                    br
    else
        h1 No articles!
    script(src='https://code.jquery.com/jquery-3.5.1.min.js', integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=', crossorigin='anonymous')
    script(src='/javascripts/delete.js')